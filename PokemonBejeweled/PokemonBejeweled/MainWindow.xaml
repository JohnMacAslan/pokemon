<Window x:Class="PokemonBejeweled.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="600" Width="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DockPanel Margin="0,0,0.4,0.4" Grid.ColumnSpan="2">
        <TextBlock Background="GreenYellow" DockPanel.Dock="Top" FontSize="36">
           Cutesiest Bejeweled EVAR!!!</TextBlock>
            <StackPanel Background="Black"  DockPanel.Dock="Left" Width="110">
                <Expander IsExpanded="True" Header="Main Menu" TextElement.Foreground="YellowGreen">
                    <StackPanel Width="75" >
                        <Button Background="YellowGreen" Name="NewGameButton">New Game</Button>
                        <Button Background="YellowGreen" Name="QuitGameButton">Quit</Button>
                    </StackPanel>
                </Expander>
                <Expander IsExpanded="True" Header="Settings">
                    <StackPanel Width="100" >
                        <RadioButton GroupName="GameTime" Name="oneMinute" Content="One Minute" TextElement.Foreground="YellowGreen"/>
                        <RadioButton GroupName="GameTime" Name="fiveMinute" Content ="Five Minutes" TextElement.Foreground="YellowGreen" IsChecked="True"/>
                        <RadioButton GroupName="GameTime" Name="tenMinute" Content ="Ten Minutes" TextElement.Foreground="YellowGreen"/>
                        <RadioButton GroupName="GameTime" Name="unlimitedTime" Content ="OVER 9000!!!" TextElement.Foreground="YellowGreen"/>
                    </StackPanel>
                </Expander>
                <Expander IsExpanded="True" Header="Scoreboard" TextElement.Foreground="YellowGreen">
                    <Label Name="ScoreboardLabel" FontSize="25" TextElement.Foreground="Orange" HorizontalAlignment="Right">0</Label>
                </Expander>
            </StackPanel>
            <StackPanel Background="Black" DockPanel.Dock="Bottom">
                <Expander IsExpanded="True" Header="Time Left" TextElement.Foreground="YellowGreen">
                    <StackPanel Height="50">
                        <Label Name="TimerLabel" FontSize="40" TextElement.Foreground="YellowGreen" >5:00</Label>       
                    </StackPanel>
                </Expander>
            </StackPanel>
            
            <StackPanel Background="Black">
                <UniformGrid Name="GridBoard" Margin="1" Height="400" Width="400">
                      
                   
                </UniformGrid>
            </StackPanel>
        
        </DockPanel>
    </Grid>
</Window>
